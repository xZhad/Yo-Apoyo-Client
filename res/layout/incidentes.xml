<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<View
		android:layout_width="match_parent"
		android:layout_height="4dp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="horizontal"
		android:background="@color/grisDARK" >

		<ImageView android:id="@+id/IncidentesIco"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_horizontal|center_vertical"
			android:src="@drawable/ic_launcher"
			android:scaleType="fitCenter"
			android:contentDescription="@string/app_name" />

		<View
			android:layout_width="12dp"
			android:layout_height="match_parent" />

		<LinearLayout android:id="@+id/IncidentesClick"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@color/grisDARK"
			android:onClick="goTo" >

			<TextView android:id="@+id/IncidentesCategoria"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="@string/app_name"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="@color/naranjoDARK" />

			<TextView android:id="@+id/IncidentesDescripcion"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="@string/app_name"
				android:textSize="12sp"
				android:maxLines="2"
				android:textColor="@color/casiblanco" />

		</LinearLayout>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="4dp" />

</LinearLayout>